<%= form_tag({controller: "sessions", action: "send_login"}, method: "post") do %>
  <%= label_tag(:email, "Email Address:") %>
  <%= text_field_tag(:email, params[:email]) %>
  <%= submit_tag("Send me a login email") %>
<% end %>

<% @errors.each do |error| %>
  <p><%= error %></p>
<% end unless @errors.blank? %>
